  <html>
<head>
    <title>An Office 365 API Sample App Using Node-Express-Ejs</title>
  <style>
    body {padding-top:20px; padding-left:50px; padding-right:50px}
    .rightAlign { text-align:right}
    .leftAlign { text-align:left}
    .centerAlign { text-align:center}
  </style>
</head>
<body class="centerAlign">
    <div>
      <div name="banner">
        <h1>Office 365 API Tasks | Mail</h1>
        <p>
          <% if (data.user) { %><%= data.user.displayname %> |  <% } %>
          <a href="/logout">Sign out</a>
        </p>
      </div>
      <div name="menu">
        <a href="/discovery">Discovery</a> |
        <a href="/calendar">Calendar</a> |
        <a href="/contacts">Contacts</a> |
        <a href="/files">Files</a> |
        <b>Mail</b> | 
		<a href="/site">Site lists</a> 
      </div>

      <div name="messages">
        <h2><a href="/mail/new">New message</a></h2>
        <h2>Messages</h2>
        <% if (data.msgs) { %>
          <ul>
            <% for(var i=0; i<data.msgs.length; i++) { %>
              <li>
                <div class="leftAlign">From: <%= data.msgs[i].From.EmailAddress.Name %></div>
                <div class="leftAlign">About: <%= data.msgs[i].Subject %></div>
                <div class="leftAlign">Preview: <%= data.msgs[i].BodyPreview %></div>
                <div>
                  <a href='/mail/view?id=<%= data.msgs[i].Id %>'>View</a> |
                  <a href='/mail/reply?id=<%= data.msgs[i].Id %>'>Reply</a> | 
                  <a href='/mail/delete?id=<%= data.msgs[i].Id %>'>Delete</a>
                </div>
              </li>
            <% } %>
          </ul>
        <% } %>
      </div>
    </div>
</body>
</html>

