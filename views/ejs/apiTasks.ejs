<html>
<head>
    <title>An Office 365 API Sample App Using Node-Express-Ejs</title>
    <style>
      .centerAlign { text-align:center}
    </style>
</head>
<body class="centerAlign">
	<div name="banner">
      <h1>Office 365 API Tasks</h1>
        <p>
          <% if (user) { %><%= user.displayname %> |  <% } %>
          <a href="/logout">Sign out</a>
        </p>
	</div>
    <div name="menu">
		<a href="/discovery">Discovery</a> |
		<a href="/calendar">Calendar</a> |
		<a href="/contacts">Contacts</a> |
		<a href="/files">Files</a> |
		<a href="/mail">Mail</a> |
		<a href="/site">Site lists</a>
    </div>	
	<div class="leftAlign">
		<h4>OAuth2 token</h4>
		<% if (user) { for (var res in user.tokens) { %>
			<table border="1" style="width:85%;text-align:left">
				<% for (var key in user.tokens[res]) { %>
					<tr>
						<td><%= key %></td>
						<td><%= user.tokens[res][key] %></td>
					</tr>
				<% } %>
			</table>
		<% }} %>
	</div>
</body>
</html>

