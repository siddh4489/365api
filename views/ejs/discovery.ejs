<html>
<head>
    <title>An Office 365 API Sample App Using Node-Express-Ejs</title>
  <style>
    body {padding-top:20px; padding-left:50px; padding-right:50px}
    .rightAlign { text-align:right}
    .leftAlign { text-align:left}
    .centerAlign { text-align:center}
  </style>
</head>
<body class="centerAlign">
	<div name="banner">
      <h1>Office 365 API Tasks | Discovery</h1>
        <p>
          <% if (data.user) { %><%= data.user.displayname %> |  <% } %>
          <a href="/logout">Sign out</a>
        </p>
	</div>
    <div name="menu">
		<b>Discovery</b> |
		<a href="/calendar">Calendar</a> |
		<a href="/contacts">Contacts</a> |
		<a href="/files">Files</a> |
		<a href="/mail">Mail</a> | 
		<a href="/site">site lists</a> 
    </div>	
	
    <div name="display" >
	<H2>Service capabilities</H2>
    <% if (data.capabilities) { %>
        <ul class="leftAlign">
        <% for(var cap in data.capabilities) { %>
		   <li>
			   <h4><%= cap %></h4>
			   <table border="1">
				   <% for(var key in data.capabilities[cap]) { %>            
						<tr><td><%= key %></td><td> <%= data.capabilities[cap][key] %></td></tr>
					<% } %>
				</table>
			</li>            
        <% } %>
        </ul>
    <% } %>
    </div>
</body>
</html>

